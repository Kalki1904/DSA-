int peakIndexInMountainArray(vector<int>& arr) {
        int low=0;
        int high=arr.size();
        while(low<high){
            int mid=low+(high-low)/2;
            if(arr[mid]<arr[mid+1]){
                low=mid+1;
            }
            else{
                high=mid;
            }

        }
        return low;
    }

Input-
  [1,2,3,4,3,2,1]
output-
  4
